@model CardSearchDTO
@using adduo.restoudaobra.dto;
@using adduo.restoudaobra.web.helper
@{
    var helper = AdTypeHelper.Get(Model);

    var name = Model.Ad.Name.Count() > 20 ? (Model.Ad.Name.Substring(0, 20) + "..."): Model.Ad.Name;

}

<a class="item @(helper.Type.ToString().ToLower())" href="/@(helper.URL)/@Model.Ad.URL/@Model.Ad.Guid" title="@Model.Ad.Name">
    <div class="item-thumb" style="background-image:url(@Model.Image)"></div>
    <i>@(helper.Name)</i>
    <h2 class="item-name">@name</h2>
    <h2>@Model.Ad.Brand</h2>
    <h2>@Model.Ad.Option</h2>
    <span>Estou @(helper.Name)</span>
</a>
